#!/bin/sh

exe_name=spdaemon

obj_path=../../obj/debug
bin_path=../../bin/debug

if mkdir -p "$obj_path"
then
	gmake -C "$obj_path" -f ../../Makefile \
		program_name="$exe_name" \
		compile_flags="-DDEBUG -ggdb"

	if [ -e "$obj_path/$exe_name" ]
	then
		if mkdir -p "$bin_path"
		then
			mv -f "$obj_path/$exe_name" "$bin_path"
		fi
	fi
fi
